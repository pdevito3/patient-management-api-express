{
  "name": "patient-management-api",
  "version": "1.0.0",
  "description": "Patient Management API Server",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "watch-ts": "tsc -w",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "better-sqlite3": "^11.9.1",
    "express": "^4.21.2",
    "knex": "^3.1.0",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "pino-pretty": "^13.0.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.6.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.17.19",
    "@vitest/ui": "^3.0.9",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.9"
  }
}
